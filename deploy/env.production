# Environment
NODE_ENV=production

# Server Configuration
PORT=3002
HOST=0.0.0.0

# Service URLs (Production)
AUTH_SERVICE_URL=https://auth.maiqr.app
IPFS_SERVICE_URL=https://ipfs.maiqr.app
MAGICLINK_SERVICE_URL=https://magiclink.maiqr.app

# Nostr Configuration
NOSTR_RELAYS=wss://relay.maiqr.app,wss://relay.damus.io,wss://relay.nostr.band

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
ALLOWED_ORIGINS=https://maiqr.app,https://app.maiqr.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Note: The following keys should be stored in /opt/maiqr/credentials/.env
# SERVER_PRIVATE_KEY
# SUPABASE_URL
# SUPABASE_KEY
